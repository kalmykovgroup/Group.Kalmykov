FROM ubuntu

EXPOSE 80 


ARG SSL_FILE_KEY
ARG SSL_FILE_CHAIN
ARG DOMAIN_NAME
ARG DOMAIN_EMAIL

ENV SSL_FILE_CHAIN=$SSL_FILE_CHAIN
ENV SSL_FILE_KEY=$SSL_FILE_KEY
ENV DOMAIN_NAME=$DOMAIN_NAME
ENV DOMAIN_EMAIL=$DOMAIN_EMAIL

WORKDIR /certbot
COPY . /certbot
WORKDIR /certbot


RUN apt-get update 
RUN apt-get -y install certbot 

CMD ["sh", "generate-certificate.sh"]
 